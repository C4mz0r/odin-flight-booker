<% if @results.nil? == false && @results.empty? == false %>
  <%= form_tag bookings_new_path, method: :get do %>
    <table class="table table-striped">
      <th>    		
    	<td>Flight Date</td>
    	<td>Departing</td>
    	<td>Arriving</td>
    	<td>Flight Name</td>
    	<td>Duration</td>
      </th>
      <% @results.each do |r| %>
        <tr>      
          <td><%= radio_button_tag 'flight', r.id %></td>      
          <td><%= r.date %></td>
          <td><%= r.from_airport.name %></td>
          <td><%= r.to_airport.name %></td>
          <td><%= r.name %></td>
          <td><%= r.duration.to_s + " hours"%></td>          
        </tr>
      <% end %>
    </table>
    <%= hidden_field_tag(:passengers, @passengers) %>
    <div class="text-center">   
      <%= submit_tag("Select Flight", class: "btn btn-primary")%>
    </div>
  <% end %>
<% end %>
